{
  "name": "narrowland",
  "version": "1.0.0",
  "description": "A lightweight TypeScript library providing type-safe assertions, type guards, and error handling utilities.",
  "author": "Marek Honzal <hi@marekhonzal.com>",
  "license": "MIT",
  "keywords": [
    "typescript",
    "type-guards",
    "assert",
    "invariant",
    "narrowing"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/marekh19/narrowland.git"
  },
  "bugs": {
    "url": "https://github.com/marekh19/narrowland/issues"
  },
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "main": "./dist/index.cjs",
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "scripts": {
    "prepare": "husky",
    "build": "rslib build",
    "lint:fix": "biome check --write",
    "lint:check": "biome check",
    "dev": "rslib build --watch",
    "format:fix": "biome format --write",
    "format:check": "biome format",
    "test": "vitest run",
    "test:ci": "tsc -p tsconfig.test.json && pnpm run test && pnpm run test:size",
    "test:size": "size-limit",
    "test:coverage": "vitest run --coverage",
    "test:coverage:ci": "tsc -p tsconfig.test.json && pnpm run test:coverage",
    "typecheck": "tsc --noEmit",
    "knip": "knip"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.5",
    "@changesets/cli": "^2.29.7",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@rslib/core": "^0.15.0",
    "@size-limit/preset-small-lib": "^11.2.0",
    "@types/node": "^24.7.2",
    "@vitest/coverage-v8": "^3.2.4",
    "expect-type": "^1.2.2",
    "husky": "^9.1.7",
    "knip": "^5.64.3",
    "lint-staged": "^16.2.4",
    "preset-small-lib": "link:@size/limit/preset-small-lib",
    "size-limit": "^11.2.0",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  },
  "packageManager": "pnpm@10.18.2+sha512.9fb969fa749b3ade6035e0f109f0b8a60b5d08a1a87fdf72e337da90dcc93336e2280ca4e44f2358a649b83c17959e9993e777c2080879f3801e6f0d999ad3dd"
}
